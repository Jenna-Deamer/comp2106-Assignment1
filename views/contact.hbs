<h1 class="text-center" id="formHeader">Let's Get In Touch!</h1>
<section class="container pageContainer">
    <form action="https://formsubmit.co/jennadeamer@gmail.com" method="POST" class="container">
        <fieldset class="row justify-content-center">
            <div class="col-md-6">
                <label htmlFor="name" class="mt-2"><i class="bi bi-person"></i> Name:</label>
                <input type="text" id="name" name="name" class="form-control" required={true} />

                <label htmlFor="email" class="mt-2"><i class="bi bi-envelope-at"></i> Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="somewhere@gmail.com" required={true} />
            </div>
        </fieldset>

        <fieldset class="row justify-content-center">
            <div class="col-md-6">
                <label htmlFor="message" class="mt-2"><i class="bi bi-pencil"></i> Message:</label>
                <textarea id="message" name="message" class="form-control" required={true}></textarea>
            </div>
        </fieldset>

        <div class="row align-items-center justify-content-center">
            <div class="col-md-6">
                <button class="btnPrimary mt-4 mb-4" type="submit">Submit</button>
            </div>
        </div>
    </form>
</section>
